{
    // 将 .qmd 文件关联为 markdown 语言（获得 markdown 语法高亮）
    "files.associations": {
        "*.qmd": "markdown",
        "*.v": "systemverilog",
        "*.S": "riscv",
        "*.h": "c",
        "__bit_reference": "cpp",
        "__locale": "cpp",
        "__verbose_abort": "cpp",
        "array": "cpp",
        "bitset": "cpp",
        "cctype": "cpp",
        "clocale": "cpp",
        "cmath": "cpp",
        "cstdarg": "cpp",
        "cstdint": "cpp",
        "cstdio": "cpp",
        "cstdlib": "cpp",
        "cstring": "cpp",
        "ctime": "cpp",
        "cwchar": "cpp",
        "initializer_list": "cpp",
        "ios": "cpp",
        "iosfwd": "cpp",
        "iostream": "cpp",
        "istream": "cpp",
        "limits": "cpp",
        "locale": "cpp",
        "mutex": "cpp",
        "new": "cpp",
        "optional": "cpp",
        "print": "cpp",
        "queue": "cpp",
        "stdexcept": "cpp",
        "streambuf": "cpp",
        "string": "cpp",
        "string_view": "cpp",
        "typeinfo": "cpp",
        "__hash_table": "cpp",
        "__node_handle": "cpp",
        "__split_buffer": "cpp",
        "complex": "cpp",
        "cwctype": "cpp",
        "deque": "cpp",
        "execution": "cpp",
        "memory": "cpp",
        "ratio": "cpp",
        "sstream": "cpp",
        "stack": "cpp",
        "unordered_map": "cpp",
        "variant": "cpp",
        "vector": "cpp",
        "algorithm": "cpp"
    },
    
    // TODO Highlight 配置 - 只在 .qmd 文件中生效
    "todohighlight.include": [
        "**/*.qmd"
    ],
    "todohighlight.exclude": [
        "**/*.{js,ts,jsx,tsx,py,java,c,cpp,h,hpp,cs,go,rs,rb,php,swift,kt,md,txt,json,xml,yaml,yml,html,css,scss,bib}"
    ],
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        {
            "text": "[@#][a-zA-Z0-9_:/-]+",
            "color": "#8ab4f8",
            "backgroundColor": "transparent",
            "isWholeLine": false,
            "regex": {
                "pattern": "[@#][a-zA-Z0-9_:/-]+"
            }
        }
    ],
    "todohighlight.keywordsPattern": "[@#][a-zA-Z0-9_:/-]+",
    "todohighlight.defaultStyle": {
        "color": "#8ab4f8",
        "backgroundColor": "transparent",
        "isWholeLine": false
    }
}