{
    // 将 .qmd 文件关联为 markdown 语言（获得 markdown 语法高亮）
    "files.associations": {
        "*.qmd": "markdown"
    },
    
    // TODO Highlight 配置 - 只在 .qmd 文件中生效
    "todohighlight.include": [
        "**/*.qmd"
    ],
    "todohighlight.exclude": [
        "**/*.{js,ts,jsx,tsx,py,java,c,cpp,h,hpp,cs,go,rs,rb,php,swift,kt,md,txt,json,xml,yaml,yml,html,css,scss}"
    ],
    "todohighlight.isCaseSensitive": false,
    "todohighlight.keywords": [
        {
            "text": "[@#][a-zA-Z0-9_:/-]+",
            "color": "#8ab4f8",
            "backgroundColor": "transparent",
            "isWholeLine": false,
            "regex": {
                "pattern": "[@#][a-zA-Z0-9_:/-]+"
            }
        }
    ],
    "todohighlight.keywordsPattern": "[@#][a-zA-Z0-9_:/-]+",
    "todohighlight.defaultStyle": {
        "color": "#8ab4f8",
        "backgroundColor": "transparent",
        "isWholeLine": false
    }
}